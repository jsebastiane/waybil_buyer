<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/roundedfragment_shape"
        tools:context=".view.profile.ProfileFragment">

        <TextView
            android:id="@+id/profile_fragment_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/account_details"
            style="@style/FragmentHeaders"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close_fragment_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close"/>


        <LinearLayout
            android:id="@+id/linear_account_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_fragment_header">

            <LinearLayout
                android:id="@+id/name_layout_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/businessName_header_profile"
                    style="@style/DarkFontItalic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/business_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/businessName_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:text=" - "
                    android:paddingVertical="9dp"
                    style="@style/DarkFontBold"
                    android:textSize="16sp"
                    android:theme="@style/Theme.MaterialComponents.Light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_layout_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/location_header_profile"
                    style="@style/DarkFontItalic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/location_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:paddingVertical="9dp"
                    android:text=" - "
                    style="@style/DarkFontBold"
                    android:textSize="16sp"
                    android:theme="@style/Theme.MaterialComponents.Light" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_profilePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="invisible"
                android:background="@drawable/information_fields"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pic_preview"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/picture_instructions"
                    style="@style/DarkFontItalic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/profile_picture"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/bank_details_header"
            style="@style/FragmentHeaders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/bank_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_account_details" />


        <TextView
            android:id="@+id/signOut_profilePage"
            style="@style/WhiteFont"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/dark_button"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="@string/logout"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_account_details" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>